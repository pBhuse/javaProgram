void frequency(int[]arr)
{
//    for (int i = 0; i <arr.length; i++)
//    {
//    	int f = 0;
//        int count = 0;
////        for (int j = i+1; j <arr.length; j++){
////            if (arr[i] == arr[j])
////            {
////                f = 1;
////                break;
////    	
////            }
////            }
//        for (int j = 0;j<=i;j++){
//            if (arr[i] == arr[j])
//                count++;
//        }
//        System.out.println(arr[i]+": "+count);
	
	for (int i = 0; i < arr.length; i++)
    {
        int count = 1;

        // Move the index ahead whenever
        // you encounter duplicates
        while (arr[i] == arr[i + 1])
        {
            i++;
            count++;
	}
        System.out.println(arr[i] + ": " + count);
        count++;
    }

}
